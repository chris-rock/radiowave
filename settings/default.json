{
    // xmpp domain
    "domain": "example.net",
    // should be "development" or "production"
    "environment": "development",
    // load various xrocket modules
    "modules": [{
        "type": "Rfc3921Roaster"
    }, {
        "type": "Rfc3921Messaging"
    }, {
        "type": "Xep0045",
        "subdomain": "chat"
    }, {
        "type": "Xep0060",
        "subdomain": "pubsub"
    }, {
        "type": "Xep0030"
    }, {
        "type": "Xep0092"
    }, {
        "type": "Xep0199"
    }, {
        "type": "Xep0307"
    }, {
        "type": "Xep0049"
    }, {
        "type": "Xep0016"
    }],
    // load the connection manager
    "connection": [{
        "type": "tcp",
        "port": 5222,
        "interface": "0.0.0.0"
    }, {
        "type": "bosh",
        "port": 5280,
        "path": "http-bind",
        "interface": "0.0.0.0"
    }, {
        "type": "websocket",
        "port": 42426,
        "interface": "0.0.0.0"
    }, {
        "type": "socketio",
        "port": 8888,
        "interface": "0.0.0.0"
    }, {
        "type": "engineio",
        "port": 8889,
        "interface": "0.0.0.0"
    }],
    // sets the authentication mechanism
    "auth": [{
        "type": "simple",
        "testusers" : true,
        "users": [{
            "user": "romeo",
            "password": "romeo"
        }, {
            "user": "mercutio",
            "password": "mercutio"
        }, {
            "user": "benvolio",
            "password": "benvolio"
        }]
    }],
    // storage for the data, xrocketd supports
    // sqlite, postgre and mysql
    "storage": {
        "dialect" : "sqlite",
        "user": "username",
        "password" : "password",
        "database": "database",
        "storage": "./database.sqlite"
    },
    // api and cors settings
    "api": {
        "activate": true,
        "port": 8888,
        "cors": {
            "hosts": ["http://localhost", "http://example.net"]
        }
    }
}
{
    // xmpp domain
    "domain": "example.net",
    // configures the client endpoint e.g. if xrocket is deployed behind a proxy
    "http": {
        "host": "http://localhost"
    },
    // runs api and engineio on a subpath url 
    // e.g. http://exmaple.com/subpath instead of http://exmaple.com/
    "subpath": "",
    // should be "development" or "production"
    "environment": "development",
    // load various xrocket components
    "components": [{
        "type": "Core",
        "modules": [
            "roaster",
            "messaging",
            "Xep0030",
            "Xep0092",
            "Xep0199",
            "Xep0049",
            "Xep0016"
        ]
    }, {
        "type": "Xep0045",
        "subdomain": "chat"
    }, {
        "type": "Xep0060",
        "subdomain": "pubsub"
    }],
    // load the connection manager
    "connection": [{
        "type": "tcp",
        "port": 5222,
        "interface": "0.0.0.0"
    }, {
        "type": "bosh",
        "port": 5280,
        "path": "http-bind",
        "interface": "0.0.0.0"
    }, {
        "type": "websocket",
        "port": 42426,
        "interface": "0.0.0.0"
    }, {
        "type": "socketio",
        "port": 8888,
        "interface": "0.0.0.0"
    }, {
        "type": "engineio",
        "port": 8889,
        "interface": "0.0.0.0"
    }],
    // sets the authentication mechanism
    "auth": [{
        "type": "simple",
        "testusers": true,
        "users": [{
            "user": "romeo",
            "password": "romeo"
        }, {
            "user": "mercutio",
            "password": "mercutio"
        }, {
            "user": "benvolio",
            "password": "benvolio"
        }]
    }],
    // storage for the data, xrocketd supports
    // sqlite, postgre and mysql
    "storage": {
        "dialect": "sqlite",
        "user": "username",
        "password": "password",
        "database": "database",
        "storage": "./database.sqlite"
    },
    // api and cors settings
    "api": {
        "activate": true,
        "port": 8888,
        "cors": {
            "hosts": ["http://localhost", "http://example.net"]
        }
    }
}